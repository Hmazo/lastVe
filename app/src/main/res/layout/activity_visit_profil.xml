<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitProfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView

            android:id="@+id/profilInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <androidx.cardview.widget.CardView
                    android:id="@+id/ProfilPicture"
                    android:layout_width="91dp"
                    android:layout_height="108dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/ProfilPicture1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        tools:src="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/ProfilFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Full Name"
                    android:textSize="20dp"

                    />
                <TextView
                    android:id="@+id/PorfilPosteCount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ProfilFullName"
                    android:layout_alignLeft="@id/ProfilPicture"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/PorfilAbonneCount"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ProfilFullName"
                    android:layout_marginLeft="200dp"

                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/PorfilAbonnementsCount"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ProfilFullName"
                    android:layout_marginLeft="290dp"

                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postes"
                    android:layout_below="@id/PorfilPosteCount"
                    android:layout_marginLeft="114dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_alignLeft="@id/ProfilPicture"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abonnés"
                    android:layout_below="@id/PorfilPosteCount"
                    android:layout_marginLeft="190dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_alignLeft="@id/ProfilPicture"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abonnement"
                    android:layout_below="@id/PorfilPosteCount"
                    android:layout_marginLeft="280dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:layout_alignLeft="@id/ProfilPicture"/>




            </RelativeLayout>


        </androidx.cardview.widget.CardView>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Bio"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/followButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:layout_marginLeft="10dp"
                android:text="S'abonner"
                android:textAlignment="center"
                android:backgroundTint="#fff"
                android:textColor="#000"
                android:textSize="12dp"
                android:gravity="center_horizontal" />
            <Button
                android:id="@+id/MessageButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:layout_marginLeft="205dp"
                android:text="Écrire"
                android:textAlignment="center"
                android:backgroundTint="#fff"
                android:textColor="#000"
                android:textSize="12dp"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/visitprofilRecycler"/>


    </LinearLayout>

</ScrollView>