<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView

                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profilInfo"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/ProfilPicture"
                        android:layout_width="91dp"
                        android:layout_height="108dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/ProfilPicture1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/account_icon"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/ProfilFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="20dp"

                        />
                    <TextView
                        android:id="@+id/PorfilPosteCount"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfilFullName"
                        android:text="11  postes"
                        android:layout_alignLeft="@id/ProfilPicture"
                        android:layout_marginLeft="110dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/PorfilAbonneCount"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfilFullName"
                        android:text="0  abonnes"

                        android:layout_marginLeft="200dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/PorfilAbonnementsCount"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProfilFullName"
                        android:text="0  abonnements"

                        android:layout_marginLeft="290dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postes"
                        android:layout_below="@id/PorfilPosteCount"
                        android:layout_marginLeft="114dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_alignLeft="@id/ProfilPicture"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AbonnÃ©s"
                        android:layout_below="@id/PorfilPosteCount"
                        android:layout_marginLeft="190dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_alignLeft="@id/ProfilPicture"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abonnement"
                        android:layout_below="@id/PorfilPosteCount"
                        android:layout_marginLeft="280dp"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_alignLeft="@id/ProfilPicture"/>



                </RelativeLayout>


            </androidx.cardview.widget.CardView>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="Bio"
                android:paddingLeft="40dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                />

            <Button
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#fff"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Modifier le profil"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/profilRecycler"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>